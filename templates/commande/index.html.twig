<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@400;700&display=swap" rel="stylesheet">
    <title>Suivi de commande Cinéma</title>
    <link rel="stylesheet" href="{{ asset('css/commande/styles.css') }}">
</head>
<body>
    <div class="tracker-container">
        <div class="progress-bar">
            <div class="progress-fill" id="progress"></div>
        </div>
        <div class="status-steps">
            <div class="status-step" id="step1">
                <div class="step-icon">🍿</div>
                Préparation
            </div>
            <div class="status-step" id="step2">
                <div class="step-icon">🎬</div>
                Prête
            </div>
            <div class="status-step" id="step3">
                <div class="step-icon">🎉</div>
                Terminée
            </div>
        </div>

        <div class="status-message" id="statusMessage"></div>
        <div id="paymentNotice"></div>
        
        {# Bouton Annuler uniquement pour le statut Enregistrée #}
        {% if statut == 'Enregistrée' %}
            <button id="cancelButton" class="cancel-button" onclick="cancelOrder()">Annuler la commande</button>
        {% endif %}

        {# Section avis uniquement pour certains statuts #}
        {% if statut in ['En cours de préparation', 'Prête', 'Terminée'] %}
            <div id="feedbackSection" class="feedback-section">
                <h3>Votre avis compte !</h3>
                <div class="star-rating">
                    <span onclick="rate(1)">★</span>
                    <span onclick="rate(2)">★</span>
                    <span onclick="rate(3)">★</span>
                    <span onclick="rate(4)">★</span>
                    <span onclick="rate(5)">★</span>
                </div>
                <textarea id="comment" placeholder="Laissez un commentaire (optionnel)">{{ produit.commentaireAvis ?? '' }}</textarea>
                <button onclick="submitFeedback()">Envoyer</button>
            </div>
        {% endif %}

        <button id="darkModeToggle" onclick="toggleDarkMode()">Mode Cinéma 🎥</button>
    </div>
    {% include 'commande/script.html' %}
    <script>
        // Script existant...
        
        // Fonction pour annuler la commande (à implémenter)
        function cancelOrder() {
            if(confirm("Êtes-vous sûr de vouloir annuler la commande ?")) {
                // Ajouter ici la logique d'annulation
                fetch("{{ path('commande_annuler', {'id': commande.id}) }}")
                    .then(response => response.json())
                    .then(data => {
                        if(data.success) {
                            location.reload();
                        }
                    });
            }
        }
    </script>
</body>
</html>